<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="by.lebedev.nanopoolmonitoring">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:allowBackup="true"
                 android:label="@string/app_name"
                 android:icon="@mipmap/nanopool_ic"
                 android:roundIcon="@mipmap/nanopool_round"
                 android:supportsRtl="true"
                 android:theme="@style/Theme.AppCompat.Light.NoActionBar"
                 tools:ignore="GoogleAppIndexingWarning">
        <meta-data
                android:name="com.google.android.gms.ads.APPLICATION_ID"
                android:value="ca-app-pub-1501215034144631~3780667725"/>

        <activity android:name=".activities.TabActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activities.LogoActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activities.AccountsActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activities.AddAccountActivity"
                  android:screenOrientation="portrait"

        />

    </application>
</manifest>
