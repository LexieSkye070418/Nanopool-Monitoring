<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="by.lebedev.nanopoolmonitoringnoads">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application android:allowBackup="true"
                 android:label="@string/app_name"
                 android:icon="@mipmap/logo"
                 android:roundIcon="@mipmap/nanopool_round"
                 android:supportsRtl="true"
                 android:theme="@style/Theme.AppCompat.Light.NoActionBar"
                 tools:ignore="GoogleAppIndexingWarning">


        <receiver android:name=".widget.NanopoolWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
                <action android:name="android.appwidget.ACTION_APPWIDGET_UPDATE"/>
                <action android:name="by.lebedev.nanopoolmonitoring.REFRESH_ACTION"/>
            </intent-filter>

            <meta-data
                    android:name="android.appwidget.provider"
                    android:resource="@xml/nanopool_widget_info"/>
        </receiver>

        <receiver android:name="by.lebedev.nanopoolmonitoringnoads.widget.AlarmManagerBroadcastReceiver">

            <intent-filter>
                <action android:name="android.appwidget.ACTION_APPWIDGET_UPDATE"/>
            </intent-filter>
        </receiver>


        <activity android:name="by.lebedev.nanopoolmonitoringnoads.widget.NanopoolWidgetConfigureActivity">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>



        <activity android:name="by.lebedev.nanopoolmonitoringnoads.activities.TabActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="by.lebedev.nanopoolmonitoringnoads.activities.LogoActivity"
                  android:screenOrientation="portrait">


            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>



        <activity android:name="by.lebedev.nanopoolmonitoringnoads.activities.AccountsActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="by.lebedev.nanopoolmonitoringnoads.activities.AddAccountActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="by.lebedev.nanopoolmonitoringnoads.activities.webview.WebActivity"/>

        <service android:name=".widget.DataLoaderService"/>


    </application>

</manifest>