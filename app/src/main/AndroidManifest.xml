<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools" package="by.lebedev.nanopoolmonitoring">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:allowBackup="true"
                 android:label="@string/app_name"
                 android:icon="@mipmap/nanopool_ic"
                 android:roundIcon="@mipmap/nanopool_ic"
                 android:supportsRtl="true"
                 android:theme="@style/AppTheme" tools:ignore="GoogleAppIndexingWarning">

        <activity android:name=".activities.TabActivity"/>
        <activity android:name=".activities.LogoActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activities.AccountsActivity"/>
        <activity android:name=".activities.AddAccountActivity"/>

    </application>
</manifest>
