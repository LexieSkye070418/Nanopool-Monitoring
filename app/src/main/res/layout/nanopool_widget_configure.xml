<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="16dp">

    <TextView
            android:id="@+id/coinNametextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configure widget"
            android:textStyle="italic|bold"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

    <Button
            android:drawableRight="@drawable/dropdownlisticoin"
            android:drawableLeft="@drawable/coinslist"
            android:background="@drawable/rounded"
            android:id="@+id/widgetCoinSelect"
            android:text="Select coin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"/>

    <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter wallet"
            android:textStyle="italic|bold"
            android:layout_marginBottom="8dp"/>

    <EditText
            android:id="@+id/walletWidgetEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"/>

    <Button
            android:padding="8dp"
            android:background="@drawable/rounded"
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add widget"
            android:layout_marginTop="8dp"/>

</LinearLayout>