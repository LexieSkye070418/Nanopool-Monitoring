<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
>
    <ImageView

            android:background="@drawable/widget_config_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">


        <TextView
                android:id="@+id/coinNametextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Configure widget"
                android:textSize="16sp"
                android:textStyle="italic|bold"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

        <Button
                android:drawableRight="@drawable/dropdownlisticoin"
                android:drawableLeft="@drawable/coinslist"
                android:background="@drawable/rounded"
                android:id="@+id/widgetCoinSelect"
                android:text="Select coin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>

        <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter wallet"
                android:textStyle="italic|bold"
                android:layout_marginBottom="8dp"/>

        <EditText
                android:id="@+id/walletWidgetEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="wallet"
                android:inputType="text"/>

        <Button
                android:padding="8dp"
                android:background="@drawable/widget_config_button"
                android:id="@+id/add_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add widget"
                android:layout_marginTop="8dp"/>

    </LinearLayout>

        </FrameLayout>